<div class="modal fade" id="modalFiltrosGenerales" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
       <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 id="myModalLabel2">{{ '_filtros_generales_' | trans }}</h4>
        </div>
        <div class="modal-body" style="max-height:400px; max-width:100%; overflow:auto;">
            <form class="form-horizontal" >
                <div class="form-group">
                    <label for="dimensionGeneralSelect" class="col-sm-2 control-label">{{ '_dimension_' | trans}}</label>
                    <div class="col-sm-10">
                        <select id="dimensionGeneralSelect" class="form-control"
                                ng-model ="dimensionGeneral"
                                ng-change="recuperarValoresDimensionGeneral()" >
                            <option ng-repeat="dimension in dimensionesGenerales" value="<% dimension.codigo %>"><% dimension.datos.descripcion %></option>
                        </select>
                    </div>
                </div>

                <div class="form-group" ng-if="!(filtroGeneralEsCatalogo) && dimensionGeneral != '' && dimensionGeneral != '?' ">
                    <label for="valorFiltro1" class="col-sm-2 control-label">{{ '_valor_filtro_' | trans}}</label>
                    <div class="col-sm-10">
                        <input type="text" id="valorFiltro1" ng-model="valorFiltroGeneral" >
                    </div>
                </div>

                <div class="form-group" ng-if="filtroGeneralEsCatalogo">
                    <label for="valorFiltro2" class="col-sm-2 control-label">{{ '_valor_filtro_' | trans}}</label>
                    <div class="col-sm-10">
                        <select id="valorFiltro2" class="form-control" >
                        </select>
                    </div>
                </div>
                
            </form>
            
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" ng-click="aplicarFiltroGeneral()">{{ '_aplicar_filtro_'|trans }}</button>
            <button class="btn btn-warning" data-dismiss="modal" aria-hidden="true">{{ '_cerrar_' | trans}}</button>
        </div>
    </div>
  </div>
</div>