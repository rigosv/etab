<div class="modal fade" id="modalSalas" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title" id="exampleModalLabel">{{ 'seleccion_sala' | trans }}</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
    
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#tab_salas" data-toggle="tab">
                        <i class="glyphicon glyphicon-th-large" ></i>
                        {{ '_salas_' | trans }} <span class="badge badge-light"><% salas.length %></span>
                    </a>
                </li>
                <li>
                    <a href="#tab_salas_propias" data-toggle="tab">
                        <i class="glyphicon glyphicon-th-list"></i>
                        {{ '_salas_propias_' | trans }} <span class="badge badge-light"><% salas_propias.length %></span>
                    </a>
                </li>
                <li class="">
                    <a href="#tab_salas_grupos" data-toggle="tab">
                        <i class="glyphicon glyphicon-th"></i> 
                        {{ '_salas_grupos_' | trans }} <span class="badge badge-light"><% salas_grupos.length %></span>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_salas">
                    <div class="container-fluid">

                        <div class="col-sm-12">
                            <div class="buscar-addon">
                                <div class="input-group" style="width:100%">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-search" ng-if="!cc_salas"></i>
                                        <img src="{{ app.request.schemeAndHttpHost ~ asset('images/ajax-loader.gif') }}" style="width:20px" ng-if="cc_salas"/>                                        
                                    </span>
                                    <input type="text" id="search_11" class="form-control" ng-model="buscar_salas" placeholder="{{ '_buscar_' | trans }}" autocomplete="off">
                                </div>
                            </div>
                            <br>
                        </div>   
                        
                        <div class="col-sm-12">
                            
                            <ul class="list-group" style="max-height: 40vh; min-height: 70px; overflow: auto;" ng-if="salas.length > 0">
                                <li ng-repeat="item in salas | filter:buscar_salas" class="list-group-item list_indicador d-flex justify-content-between align-items-center" ng-click="agregarSala(item)"
                                style="<% item.id == sala ? 'background: #c0f4c0;' : '' %>">
                                    <% item.nombre | uppercase %>
                                    <span class="badge badge-primary badge-pill" ng-if="tablero_indicador[item.id] > 0"><% tablero_indicador[item.id] %></span>
                                </li>
                                
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="tab-pane" id="tab_salas_propias">
                    <div class="container-fluid">
              
                        <div class="col-sm-12">
                            <div class="buscar-addon">
                                <div class="input-group" style="width:100%">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-search" ng-if="!cc_salas"></i>
                                        <img src="{{ app.request.schemeAndHttpHost ~ asset('images/ajax-loader.gif') }}" style="width:20px" ng-if="cc_salas"/> 
                                    </span>
                                    
                                    <input type="text" id="search_12" ng-model="buscar_salas_propias" class="form-control" placeholder="{{ '_buscar_' | trans }}">
                                </div> 
                            </div> 
                            <br>                                                                    
                        </div>

                        <div class="col-sm-12">
                            
                            <ul class="list-group" style="max-height: 40vh; min-height: 70px; overflow: auto;" ng-if="salas_propias.length > 0">
                                <li ng-repeat="item in salas_propias | filter:buscar_salas_propias" class="list-group-item list_indicador d-flex justify-content-between align-items-center" ng-click="agregarSala(item)"
                                style="<% item.id == sala ? 'background: #c0f4c0;' : '' %>">
                                    <% item.nombre | uppercase %>
                                    <span class="badge badge-primary badge-pill" ng-if="tablero_indicador[item.id] > 0"><% tablero_indicador[item.id] %></span>
                                </li>                                    
                            </ul>
                        </div>

                    </div>
                </div>

                <div class="tab-pane" id="tab_salas_grupos">
                    <div class="container-fluid">
                        <div class="col-sm-12">
                            <div class="buscar-addon">
                                <div class="input-group" style="width:100%">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-search" ng-if="!cc_salas"></i>
                                        <img src="{{ app.request.schemeAndHttpHost ~ asset('images/ajax-loader.gif') }}" style="width:20px" ng-if="cc_salas"/> 
                                    </span>
                                    
                                    <input type="text" id="search_13" g-model="buscar_favorito" class="form-control" placeholder="{{ '_buscar_' | trans }}">
                                </div> 
                            </div>  
                            <br>                                                                               
                        </div>

                        <div class="col-sm-12">
                           
                            <ul class="list-group" style="max-height: 40vh; min-height: 70px; overflow: auto;" ng-if="salas_grupos.length > 0">
                                <li ng-repeat="item in salas_grupos | filter:buscar_favorito" class="list-group-item list_indicador d-flex justify-content-between align-items-center" ng-click="agregarSala(item)"
                                style="<% item.id == sala ? 'background: #c0f4c0;' : '' %>">
                                    <% item.nombre | uppercase %>
                                    <span class="badge badge-primary badge-pill" ng-if="tablero_indicador[item.id] > 0"><% tablero_indicador[item.id] %></span>
                                </li>                                    
                            </ul>
                        </div>
                    </div>
                    
                </div>
            </div>
        <!-- fin body -->        
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ '_cerrar_' | trans}}</button>
        </div>
        </div>
    </div>
</div>