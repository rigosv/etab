<div class="modal fade" id="modalConfiguracion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
       <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 id="myModalLabel2">{{ 'javascript.opciones_grafico' | trans }}</h4>
        </div>
        <div class="modal-body" style="max-height:400px; max-width:100%; overflow:auto;">
            <div class="container-fluid" >
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label  ">{{ 'javascript.ordenar_y' | trans}}:</label>
                        <div class="ordenar_medida form-control">
                            <label class="radio-inline" ng-click="ordenarArreglo(posicion, 'valor', 'asc')">
                                <input type="radio" name="orden" id="orden1" value="asc" ng-model="indicadores[posicion].configuracion.orden_y" > {{ 'javascript.ascendente' | trans}}
                            </label>
                            <label class="radio-inline" ng-click="ordenarArreglo(posicion, 'valor', 'desc')">
                                <input type="radio" name="orden" id="orden2" value="desc" ng-model="indicadores[posicion].configuracion.orden_y" > {{ 'javascript.descendente' | trans}}
                            </label>                            
                        </div>                        
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label ">{{ 'javascript.ordenar_x' | trans}}:</label>
                        <div class="ordenar_medida form-control">
                            <label class="radio-inline" ng-click="ordenarArreglo(posicion, 'nombre', 'asc')">
                                <input type="radio" name="orden" id="orden3" value="asc" ng-model="indicadores[posicion].configuracion.orden_x" > {{ 'javascript.ascendente' | trans}}
                            </label>
                            <label class="radio-inline" ng-click="ordenarArreglo(posicion, 'nombre', 'desc')">
                                <input type="radio" name="orden" id="orden4" value="desc" ng-model="indicadores[posicion].configuracion.orden_x" > {{ 'javascript.descendente' | trans}}
                            </label>                            
                        </div>     
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label  ">{{ 'javascript.tipo_grafico' | trans}}: </label>
                        <select class="tipo_grafico_principal form-control" ng-model="indicadores[posicion].configuracion.tipo_grafico" ng-change="actualizarsGrafica(posicion, false, false);">
                            <option ng-repeat="item in indicadores[posicion].informacion.dimensiones[indicadores[posicion].dimensiones[indicadores[posicion].dimension].trim()].graficos" value="<% item.codigo %>"><% item.descripcion %></option>
                        </select>
                    </div>
                </div>
