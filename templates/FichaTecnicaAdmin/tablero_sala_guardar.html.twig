<div class="modal fade" id="modalGuardarSala" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-lg">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel">{{ '_guardar_sala_' | trans }}</h3>
         </div>
         <div class="modal-body">
            <label for="nombre_sala">{{ '_nombre_sala_' | trans }}</label>
            <textarea id="nombre_sala" ng-model="sala.nombre" id-sala="" rows="3" style="width: 100%" class="form-control"></textarea>

            <span style="display:none">
                <span id="guardar_sala_ok">{{ '_mensaje_ok_guardar_sala_' | trans}}</span>
                <span id="guardar_sala_error">{{ '_mensaje_error_guardar_sala_' | trans}}</span>
            </span>

         </div>
         <div class="modal-footer">
            <span class="alert" id="info_sala"></span>
            <button ng-if="abrio_sala" type="button" class="btn btn-danger" ng-click="borrarSala(sala)" ng-disabled="sala_cargando">
                <img src="{{ app.request.schemeAndHttpHost ~ asset('images/ajax-loader.gif') }}" style="width:20px" ng-if="sala_cargando"/>
                {{ '_borrar_' | trans }}
            </button>
            
            <button ng-if="abrio_sala" id="actualizar_sala" class="btn btn-primary" ng-click="guardarSala(sala)" ng-disabled="sala_cargando">
                <img src="{{ app.request.schemeAndHttpHost ~ asset('images/ajax-loader.gif') }}" style="width:20px" ng-if="sala_cargando"/>
                {{ '_actualizar_sala_' | trans }}
            </button>
            
            <button ng-if="!abrio_sala" id="guardar_sala" class="btn btn-primary" ng-click="guardarSala(sala)" ng-disabled="sala_cargando">
                <img src="{{ app.request.schemeAndHttpHost ~ asset('images/ajax-loader.gif') }}" style="width:20px" ng-if="sala_cargando"/>
                {{ '_guardar_sala_' | trans }}
            </button>

            <button class="btn btn-warning" data-dismiss="modal" aria-hidden="true">{{ '_cerrar_' | trans}}</button>
         </div>
      </div>
   </div>
</div>
