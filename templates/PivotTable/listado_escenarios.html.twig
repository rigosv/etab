<div class="panel panel-primary">
        <div class="panel-heading">{{ '_escenarios_propios_'|trans }}</div>
        {% if datos.propios|length == 0 %}
                <div class="panel-body">
                        <p>{{ '_no_escenarios_creados'|trans }}</p>
                </div>
        {% endif %}

        <table class="table">
                {%  for e in datos.propios %}
                        <TR>
                                <TD><button type="button" class="list-group-item escenario" data-id="{{ e.id }}">{{ e.nombre }}</button></TD>
                                <TD style="width: 10%">
                                        <button type="button" class="btn btn-danger"
                                                data-id="{{ e.id }}"
                                                title="{{ '_borrar_'|trans }}"
                                                data-container="body"
                                                data-toggle="popover"
                                                data-placement="left"
                                                data-html = true
                                                data-trigger="focus"
                                                data-content="{{ '_confirmar_borrado_?'|trans }} <BR/><button
                                                        data-id='{{ e.id }}'
                                                        onclick='borrarEscenario({{ e.id }})'
                                                        class= 'btn btn-danger escenario-borrar' >{{ '_si_'|trans }}</button>
                                                        <button class= 'btn btn-default'>{{ '_no_'|trans }}</button>"
                                        >
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        </button>
                                </TD>
                        </TR>
                {% endfor %}
        </table>
</div>

<div class="panel panel-info">
        <div class="panel-heading">{{ '_escenarios_otros_'|trans }}</div>
        {% if datos.otros|length == 0 %}
                <div class="panel-body">
                        <p>{{ '_no_escenarios_creados'|trans }}</p>
                </div>
        {% endif %}

        <table class="table">
                {%  for e in datos.otros %}
                        <TR>
                                <TD><button type="button" class="list-group-item escenario" data-id="{{ e.id }}">{{ e.nombre }}</button></TD>
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <TD style="width: 10%">
                                        <button type="button" class="btn btn-danger escenario-borrar" data-id="{{ e.id }}" title="{{ '_borrar_'|trans }}">
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        </button>
                                </TD>
                                {% endif %}
                        </TR>
                {% endfor %}
        </table>
</div>